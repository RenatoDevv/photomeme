---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<title>{title}</title>
		<meta name="title" content="Photo MEME" />
		<meta
			name="description"
			content="La comunidad más grande de creadores de memes y editores de fotos."
		/>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/meme3.webp" />		

		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://photomeme.vercel.app/" />
		<meta property="og:title" content="Photo MEME" />
		<meta
			property="og:description"
			content="La comunidad más grande de creadores de memes y editores de fotos."
		/>
		<meta
			property="og:image"
			content="/image.webp"
		/>

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://photomeme.vercel.app/" />
		<meta property="twitter:title" content="Photo MEME" />
		<meta
			property="twitter:description"
			content="La comunidad más grande de creadores de memes y editores de fotos."
		/>
		<meta
			property="twitter:image"
			content="/image.webp"
		/>
		<meta name="google-site-verification" content="e36yIr9UAa4S9SbDaj0IeYZnkMTGvZnRNbymv1_oI50" />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap");
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	:root {
	}
	html {
		background: #fff;
		scroll-behavior: smooth;
	}
	body {
		font-family: "Poppins", sans-serif;
		font-weight: 400;
		font-size: 15px;
		color: #666;
	}
	a {
		text-decoration: none;
		color: #222;
	}
	ul,
	li {
		list-style: none;
	}
	.section-title {
		color: #000;
		font-size: 4rem;
		text-align: center;
	}
	.section-subtitle {
		color: #222;
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}
	main {
		max-width: 1280px;
		margin: auto;
	}
	@media screen and (width <= 760px) {
		main {
			padding: 0 1.5rem;
		}
	}
</style>
